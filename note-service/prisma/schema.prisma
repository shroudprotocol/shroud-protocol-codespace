generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model EncryptedNote {
  id        String   @id @default(cuid())
  userAddress String
  ciphertext  String
  createdAt DateTime @default(now())

  @@index([userAddress]) // Add an index for faster lookups by address
}